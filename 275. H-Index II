//lineae search

class Solution {
public:
    int hIndex(vector<int>& citations) {
        int ans = 0;
        int n = citations.size();
        for(int i=0; i<n; i++){
            int temp = min(n-i, citations[i]);
            ans = max(ans, temp);
        }
        return ans;
    }
};



//Binary Search

class Solution {
public:
    int hIndex(vector<int>& citations) {
        int l=0;
        int r = citations.size()-1;
        int n = citations.size();
        while(l <= r){
            int mid = (l+r)/2;
            if(citations[mid] == n-mid){
                return n-mid;
            }
            else if(citations[mid] < n-mid){
                l = mid+1;
            }
            else{
                r = mid-1;
            }
        }
        return n-l;
    }
};
